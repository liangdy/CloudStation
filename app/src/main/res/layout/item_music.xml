<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_click_bg">

    <com.magical.library.view.XImageView
        android:id="@+id/music_cover_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        app:actualImageScaleType="centerCrop"
        app:failureImage="@drawable/default_music_cover"
        app:failureImageScaleType="centerCrop"
        app:placeholderImage="@drawable/default_music_cover"
        app:placeholderImageScaleType="centerCrop"
        app:roundAsCircle="true" />

    <ImageView
        android:id="@+id/arrow_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_more" />

    <TextView
        android:id="@+id/music_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/music_cover_iv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/arrow_iv"
        android:layout_toRightOf="@id/music_cover_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="青花瓷"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/music_cover_iv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/arrow_iv"
        android:layout_toRightOf="@id/music_cover_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="周杰伦"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/music_cover_iv"
        android:layout_marginTop="6dp"
        android:background="#22000000" />
</RelativeLayout>