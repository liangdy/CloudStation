<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/cover_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.magical.library.view.XImageView
            android:id="@+id/img_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:actualImageScaleType="centerCrop"
            app:failureImage="@drawable/default_music_cover"
            app:failureImageScaleType="centerCrop"
            app:placeholderImage="@drawable/default_music_cover"
            app:placeholderImageScaleType="centerCrop" />

        <View
            android:id="@+id/cover_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#44000000" />

        <TextView
            android:id="@+id/listen_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/icon_listen_count"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:text="1221313"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12" />
    </FrameLayout>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="哈哈等卡号的卡圣诞节的啊"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="周杰伦"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>