<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/local_music_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/common_click_bg"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/music_icn_local" />

            <TextView
                android:id="@+id/local_music_tv"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:text="@string/local_music"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:id="@+id/recent_play_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/common_click_bg"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/music_icn_recent" />

            <TextView
                android:id="@+id/recent_play_tv"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:text="@string/recent_play"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:id="@+id/download_manager_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/common_click_bg"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/music_icn_dld" />

            <TextView
                android:id="@+id/download_manager_tv"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:text="@string/download_manager"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightGray" />

        <LinearLayout
            android:id="@+id/my_singer_layout"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:background="@drawable/common_click_bg"
            android:orientation="horizontal"
            android:paddingLeft="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/music_icn_artist" />

            <TextView
                android:id="@+id/my_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:gravity="center_vertical"
                android:text="@string/my_singer"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/colorLightGray" />

    </LinearLayout>

</ScrollView>