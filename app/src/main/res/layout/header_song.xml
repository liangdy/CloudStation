<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/common_click_bg"
    android:clickable="true">

    <ImageView
        android:id="@+id/play_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/icon_play_all" />

    <TextView
        android:id="@+id/play_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/play_iv"
        android:gravity="center_vertical"
        android:text="@string/detail_play_all_tips"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_14" />

    <TextView
        android:id="@+id/song_count_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/play_all_tv"
        android:gravity="center_vertical"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/text_size_14" />

    <ImageView
        android:id="@+id/edit_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:src="@drawable/icon_edit" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLightGray" />

</RelativeLayout>